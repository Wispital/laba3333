#include<iostream>
using namespace std;
void parallel(double a = 0, double b = 0, double a1 = 0, double b1 = 0) {
    setlocale(LC_ALL, "Russian");
    if ((a / a1) == (b / b1)) {
	cout << "Прямые параллельны" << endl;
    }
}
void directxy(double a = 0, double a1 = 0, double b = 0, double b1 = 0) {
    setlocale(LC_ALL, "Russian");
    double y = (a1 * a - b1 * b) / (a1 - a);
    double x = (b - b1) / (a1 - a);
    cout << "Точка пересечения x= " << x << endl;
    cout << "Точка пересечения y= " << y << endl;
}
int main() {
    setlocale(LC_ALL, "Russian");
    double a;
    double a1;
    double b;
    double b1;
    cout << "Введите ваши значения a, b: ";
    cin >> a >> b;
    cout << "Введите ваши значения a1, b1 : ";
    cin >> a1 >> b1;
    parallel(a, a1, b, b1);
    directxy(a, a1, b, b1);
    return 0;
}
